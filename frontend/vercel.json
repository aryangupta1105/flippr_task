{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "public": true,
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://flippr-task-backend-new.onrender.com/api/:path*"
    },
    {
      "source": "/uploads/:path*",
      "destination": "https://flippr-task-backend-new.onrender.com/uploads/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
